<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sweet.dao.BookDao">
    <!--分页查询所有书籍-->
    <select id="queryBookByPage" resultType="book">
        select *
        from t_book
        limit #{pageNumber}, 4
    </select>
    <!--查询总记录数-->
    <select id="queryBookTotal" resultType="object">
        select count(*)
        from t_book
    </select>
    <!--根据价格查询书籍集合-->
    <select id="queryBookByPrice" resultType="book">
        select *
        from t_book
        where price > #{min}
          and price &lt; #{max}
        limit #{pageNumber}, 4
    </select>
    <!--查询该价格区间的总记录数-->
    <select id="queryBookTotalByPrice" resultType="object">
        select count(*)
        from t_book
        where price > #{min}
          and price &lt; #{max}
    </select>
    <!-- 根据id查询书籍 -->
    <select id="queryBookById" resultType="book">
        select *
        from t_book
        where id = #{id}
    </select>
    <!-- 修改书籍信息 -->
    <update id="updateBook" parameterType="book">
        update t_book
        set name    = #{name},
            author  = #{author},
            version = #{version},
            price   = #{price}
        where id = #{id};
    </update>
    <!-- 添加图书 -->
    <insert id="addBook" parameterType="book">
        insert into t_book(name , author ,version,price,imgPath, link,extractioncode) values
        (#{name},#{author},#{version} ,#{price}, #{imgPath}
        ,#{link},#{extractioncode})
    </insert>
    <insert id="addBookNoImg" parameterType="book">
        insert into t_book(name , author ,version,price,link,extractioncode) values
        (#{name},#{author},#{version} ,#{price}
        ,#{link},#{extractioncode})
    </insert>
    <!-- 删除图书信息 -->
    <delete id="deleteBook">
        delete
        from t_book
        where id = #{id}
    </delete>
</mapper>